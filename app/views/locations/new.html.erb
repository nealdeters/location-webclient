<%= form_tag "/locations", method: :post do %>
  
  <%= label_tag :street_address %>
  <%= text_field_tag :street_address %>

  <%= label_tag :city %>
  <%= text_field_tag :city %>

  <%= label_tag :state %>
  <%= text_field_tag :state %>

  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>

  <%= label_tag :country %>
  <%= text_field_tag :country %>

  <%= submit_tag 'Add Brand', class: "btn btn-default"%>
<% end %>