<%= form_tag "/locations/#{@location.id}", method: :patch do %>
  
  <%= label_tag :street_address %>
  <%= text_field_tag :street_address, @location.street_address %>

  <%= label_tag :city %>
  <%= text_field_tag :city, @location.city %>

  <%= label_tag :state %>
  <%= text_field_tag :state, @location.state %>

  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode, @location.zipcode %>

  <%= label_tag :country %>
  <%= text_field_tag :country, @location.country %>

  <%= submit_tag 'Update Location', class: "btn btn-default"%>
<% end %>